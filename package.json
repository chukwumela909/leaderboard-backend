{
  "name": "leaderboard-backend",
  "version": "1.0.0",
  "description": "AWS Lambda-compatible leaderboard system backend",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "serverless offline",
    "dev:ws": "ts-node src/local.ts",
    "deploy": "serverless deploy",
    "deploy:prod": "serverless deploy --stage prod",
    "logs": "serverless logs -f api -t",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/(services|routes)",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:verbose": "jest --verbose",
    "clean": "rimraf dist .serverless coverage"
  },
  "keywords": [
    "aws",
    "lambda",
    "serverless",
    "leaderboard",
    "express",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.862.0",
    "@aws-sdk/client-dynamodb": "^3.862.0",
    "@aws-sdk/lib-dynamodb": "^3.862.0",
    "@types/socket.io": "^3.0.1",
    "aws-jwt-verify": "^5.1.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "serverless-http": "^3.2.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.4",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/helmet": "^0.0.47",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.5",
    "@types/node": "^20.5.9",
    "@types/socket.io-client": "^1.4.36",
    "@types/supertest": "^6.0.3",
    "jest": "^30.0.5",
    "rimraf": "^5.0.1",
    "serverless": "^3.34.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-offline": "^13.8.0",
    "serverless-plugin-typescript": "^2.1.4",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
